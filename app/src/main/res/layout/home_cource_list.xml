<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/box"
        android:elevation="5dp"
        android:clipToPadding="false"
        android:background="@drawable/cource_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Sigma Yellow Belt Studyguide"
            android:textColor="#607D8B"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e2e2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Six Sigma Yellow Belt Online Training"
                    android:textSize="10dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#1565C0"/>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:padding="8dp"
                        android:src="@drawable/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/remaining_date"
                        android:layout_gravity="center"
                        android:textSize="10dp"
                        android:textColor="#607D8B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Days Left Expired"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:padding="8dp"
                        android:src="@drawable/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/chapters"
                        android:layout_gravity="center"
                        android:textSize="10dp"
                        android:textColor="#607D8B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Chapters"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/study_guide"
                            android:layout_gravity="center"
                            android:textSize="10dp"
                            android:textColor="#607D8B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Study Guide"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:padding="8dp"
                            android:src="@drawable/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/videos"
                            android:layout_gravity="center"
                            android:textSize="10dp"
                            android:textColor="#607D8B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Videos"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
           <!-- <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_gravity="right"
                android:layout_width="120dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:donut_max="100"
                app:donut_finished_stroke_width="18dp"
                app:donut_circle_starting_degree="-90"
                android:layout_height="120dp"
                custom:donut_progress="53"/>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>