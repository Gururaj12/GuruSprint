<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STEP 1 OF 3"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:gravity="center"

            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/step1signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signuptostart"
            android:padding="5dp"
            android:layout_marginTop="10dp"


            android:gravity="center"


            />
        <TextView
            android:id="@+id/step1moresteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/twomorestep"
            android:padding="5dp"

            android:layout_marginTop="10dp"
            android:gravity="center"


            />


        <TextView
            android:id="@+id/step1account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/createaccount"
            android:padding="5dp"
            android:layout_marginTop="35dp"

            android:gravity="center"
            android:layout_marginLeft="20dp"

            />







        <LinearLayout
        android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
        android:padding="30dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"


                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
             android:layout_gravity="center"

                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
          <!--  <Button

                android:id="@+id/twitter"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#688acf"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="Linkedin Login"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
-->

        </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_weight="20"
            android:layout_marginTop="10dp"
            android:background="#b3b5b7"></TableRow>
<TextView
    android:layout_weight="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="or use email address"/>

        <TableRow
            android:layout_weight="20"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#b3b5b7">

        </TableRow>


    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:padding="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/registername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Your Email Address"/>

        <EditText
            android:id="@+id/useremail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg_selector"
            android:inputType="textEmailAddress"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:paddingLeft="20dp"
        android:padding="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/registerpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Password"/>

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg_selector"
            android:inputType="textEmailAddress"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:paddingLeft="20dp"
        android:padding="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/registerfullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Fullname"/>

        <EditText
            android:id="@+id/userfullname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"



            android:background="@drawable/edt_bg_selector"
            android:inputType="textEmailAddress"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:paddingLeft="20dp"
        android:padding="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/registernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Mobile Number"/>

        <EditText
            android:id="@+id/usernumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg_selector"
            android:inputType="textEmailAddress"
            android:padding="5dp" />
    </LinearLayout>


        <TextView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step2"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:id="@+id/step2signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step2plan"
            android:padding="5dp"

            android:layout_marginTop="30dp"


            android:gravity="center"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/steptextmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/priceduration"


            />
        <TextView
            android:id="@+id/steptexlap"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/pricewatch"


            android:layout_marginTop="30dp"

            />
        <TextView
            android:id="@+id/steptextaccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/priceaccess"


            android:layout_marginTop="30dp"

            />
        <TextView
            android:id="@+id/steptextcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/pricecancel"


            android:layout_marginTop="30dp"

            />
        <TextView
            android:id="@+id/videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/pricevideos"


            android:layout_marginTop="30dp"

            />

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="read and accept Terms and Conditions"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorButton"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Continue"
            android:onClick="registerContinue"/>



        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@null"
            android:text="Have An Account?Login"
            android:textAllCaps="false"

            android:textSize="10dp" />

    </LinearLayout>

</ScrollView>