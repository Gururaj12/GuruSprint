<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cource_list"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="8dp"
                android:elevation="5dp"
                android:clipToPadding="false"
                android:background="@drawable/circle_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/text"
                android:textSize="12dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is LMS?"/>
            <ImageView
                android:id="@+id/icon"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_margin="8dp"
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It depends on the course and the certifying body of the respective course. If they provide hard copy of the certificate, we will dispatch the same to you and if it is soft copy, you will receive the same via email. The course completion certificate from Sprintzeal will be a soft copy." />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>