<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:squint="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:clipToPadding="false"
        android:elevation="3dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/logo_small"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.design.widget.CoordinatorLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/banner">
                    <ImageView
                        android:onClick="update"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_number"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done"
                        android:layout_gravity="right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/aboutMe"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </android.support.design.widget.CoordinatorLayout>
                <ImageView

                    android:id="@+id/dp"
                    android:padding="8dp"
                    android:elevation="5dp"
                    android:background="#fff"
                    android:layout_marginTop="-50dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="26dp">
                        <EditText
                            android:id="@+id/fullName"
                            android:textSize="17dp"
                            android:textColorHint="#607D8B"
                            android:drawablePadding="16dp"
                            android:textColor="#607D8B"
                            android:hint="Full Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/user_line_gray"
                            android:background="@android:color/transparent"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#607D8B"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="36dp">
                        <EditText
                            android:focusable="false"
                            android:id="@+id/email"
                            android:textSize="17dp"
                            android:textColorHint="#607D8B"
                            android:drawablePadding="16dp"
                            android:textColor="#607D8B"
                            android:hint="Email Id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mail_gray"
                            android:background="@android:color/transparent"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#607D8B"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="36dp">
                        <EditText
                            android:id="@+id/contactNo"
                            android:textSize="17dp"
                            android:textColorHint="#607D8B"
                            android:drawablePadding="16dp"
                            android:textColor="#607D8B"
                            android:hint="Contact Number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/call_gray"
                            android:background="@android:color/transparent"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#607D8B"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="36dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/password"
                                android:maxLength="10"
                                android:textSize="17dp"
                                android:textColorHint="#607D8B"
                                android:drawablePadding="16dp"
                                android:textColor="#607D8B"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/lock_gray"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#607D8B"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="36dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/address"
                                android:maxLength="10"
                                android:textSize="17dp"
                                android:textColorHint="#607D8B"
                                android:drawablePadding="16dp"
                                android:textColor="#607D8B"
                                android:hint="Address"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_location"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#607D8B"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>